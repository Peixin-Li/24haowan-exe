@import url(reset.css);
.abstract {
  height: 50px;
  font-size: 16px;
  padding: 5px 5px; }

.game-list {
  height: 250px;
  position: relative; }
  .game-list .title {
    width: 100%;
    text-align: center;
    color: #fff;
    font-size: 46px;
    position: absolute;
    left: 50%;
    top: 50%;
    font-weight: bold;
    text-shadow: -1px 1px 5px #000;
    -webkit-transform: translateX(-50%) translateY(-50%);
    transform: translateY(-50%) translateX(-50%); }
  .game-list .date {
    display: block;
    font-size: 18px; }
  .game-list .win {
    position: absolute;
    right: 0;
    top: 0;
    font-size: 16px;
    color: #fff;
    background: #d0021b url(../images/flag.png) no-repeat left top;
    background-position: left center;
    background-size: 20px 20px;
    padding: 6px 12px;
    padding-left: 25px;
    height: 22px; }
    .game-list .win:before {
      position: absolute;
      left: -20px;
      top: 0;
      content: "";
      display: block;
      height: 0;
      width: 0;
      border-width: 17px 6px 17px 14px;
      border-color: #d0021b #d0021b #d0021b transparent;
      border-style: solid; }
  .game-list .bg {
    width: 100%;
    height: 50px;
    background-color: #000;
    opacity: .5;
    position: absolute;
    bottom: 0; }
  .game-list .data-box {
    width: 100%;
    height: 50px;
    position: absolute;
    bottom: 0; }
    .game-list .data-box span {
      color: #fff;
      font-size: 16px; }
    .game-list .data-box .star {
      position: absolute;
      top: 50%;
      -webkit-transform: translateY(-50%);
      transform: translateY(-50%);
      left: 10px; }
      .game-list .data-box .star li {
        display: inline-block;
        width: 20px;
        height: 20px;
        margin-right: 5px; }
    .game-list .data-box .popular {
      position: absolute;
      top: 50%;
      -webkit-transform: translateY(-50%);
      transform: translateY(-50%);
      right: 10px; }

