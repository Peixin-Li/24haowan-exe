*{ margin: 0;padding: 0; font-family: "Microsoft YaHei";}
li{ list-style: none;}
a{ color: #000; text-decoration: none;}
a:hover{ color:#fff;}
img{ border:0;}

.title{ font-size: 28px;}

#header-contain{ background: #fff; width: 100%;}
#header{ width: 960px; background: #fff; margin: 0 auto; height: 100px; position: relative;}
#logo{ float:left; display: block; width: 170px; height: 64px; margin: 18px 0px 18px 32px;}
#header-right{ float: right; width: 448px; height: 100px; font-size: 14px; }
#ul-container{ text-align: center;}
#ul-container ul li{ float:left;}
#ul-container ul li a{ width: 112px; height: 100px; line-height: 100px; display: block;}
.li-4{ background: #54c0d6;}
.li-4 a{ color: #fff;}
.li-1:hover{ background: #d04759;}
.li-2:hover{ background: #5557a0;}
.li-3:hover{ background: #fec356;}
.li-4:hover{ background: #54c0d6;}

#contact-us{ height: 338px; width: 960px; margin: 0 auto; padding-top: 50px;}
#contact-info{ width: 536px; height: 338px; margin: 0 auto;}
#info-p{ text-align: center; font-size: 28px;}
#info-ul{ margin-top: 30px;}
#info-ul li{ height: 50px; margin-top: 20px; position: relative;}
#info-ul li img{ margin-right: 20px;}
#info-ul li p{ display: inline-block; font-size: 20px; height: 50px; position: absolute; top: 50%; margin-top:-10px;}
#special{ position: relative; left: 215px; display: inline-block;}
#special p{ width: 200px;}

#about-us{ width: 100%; height: 265px; background: #54c0d6; color: #fff; text-align: center; margin-top: 40px;}
#about-us{ padding-top: 50px;}
#about-us .title{ margin-bottom: 50px;}
#info-contain{ width: 650px; text-align: left; margin: 0 auto; text-indent: 36px; font-size: 18px;}

#team-p{ text-align: center; padding: 50px 0; margin-bottom: 25px;}
#team-head{ width: 960px; height: 1424px; background: #fff; margin: 0 auto;}
.head{ width: 186px; height: 390px; padding: 50px 27px 0 27px; float: left;}
.head-p{ padding: 50px 0; text-align: center; width: 186px;}
.head-p1{ margin-bottom: 20px;}
.join{ margin-top: -8px;}
.join .head-p2{ margin-top: -17px;}

#footer{ width: 100%; height: 171px;}
#code-contain{ width: 100%; margin: 0 auto; background: #2a2d30; height: 131px; position: relative;}
#code-contain img{ position: absolute; left: 50%; top: 50%; margin-left: -50px; margin-top: -50px;}
#footer-info{ width: 100%; margin: 0 auto; background: #000; height: 40px;}