$colorY : #f5a623;
$dog_height : 138px;
html,body {
	width: 100%;
	height: 100%;
}

.over-box {
	height: 100%;
	display: none;
	position: absolute;
	z-index: 67;
	width: 100%;
	left: 0;
	top: 0;
	.top-hint {
		background-color: $colorY;
		padding: 6px;
		text-align: center;
		color: #fff;
		font-size: 16px;
		img {
		    vertical-align: bottom;
		    width: 23px;
		}
	}
	
	.data-box {
		width: 100%;

		position: relative;
		.pic-box {
			width: 300px;
			height: 260px;
			position: absolute;
			top: 40px;
			left: 50%;
			-webkit-transform: translateX(-50%);
			        transform: translateX(-50%);
			.over-text {
				position: absolute;
				right: 6px;
				color: #000;
				font-size: 14px;
			}
			.over-bg {
				position: absolute;
				display: block;
				width: 300px;
				height: 260px;
			}
			.badge {
			    width: $dog_height;
			    height: $dog_height;
			    position: absolute;
			    top: -22px;
			    left: 7px;
			}
			.left-box {
				position: absolute;
				top: 100px;
				left: 40px;
				text-align: center;
				.headImg {
					width: 60px;
					height: 60px;
					background-size: cover;
					border-radius: 50%;
					border: 3px solid #000;
				}
				.badge-text {
					font-size: 16px;
				}
			}
			.right-box {
				position: absolute;
				top: 100px;
				right: 40px;
				text-align: right;
				.label-score,.label-max-score {
					font-size: 16px;
					color: #000;
				}
				.score, .max-score {
					font-size: 20px;
				}
				.label-max-score {
				    background-position: left center;
				    background-repeat: no-repeat; 
				    padding-left: 23px;
				    background-size: 20px 20px;
				}

			}
			.data-text {
				position: absolute;
				left: 50%;
				bottom: 30px;
				-webkit-transform: translateX(-50%);
				        transform: translateX(-50%);
			}
		}

	}
	
	.menu {
		position: absolute;
		width: 90%;
		bottom: 124px;
		left: 50%;
		-webkit-transform: translateX(-50%);
		        transform: translateX(-50%);
		height:30px;
		text-align: center;
		span {
			display: inline-block;
			width: 130px;
			img {
				width: 100%;
			}
		}
		
	}
}