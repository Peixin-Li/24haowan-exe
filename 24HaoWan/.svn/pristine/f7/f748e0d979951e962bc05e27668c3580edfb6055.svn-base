@import url(reset.css);
 
.main {
	width: 90%;
	margin: 0 auto;
}
input {
	outline: none;
}
.head {
	position: relative;
	width: 100%;
	height:100px;
	border-bottom: 2px solid #ddd;
	.leftbox {
		position: absolute;
		left:12px;
		top: 50%;
		-webkit-transform: translateY(-50%);
		        transform: translateY(-50%);
		img {
			width: 100px;
		}
	}

	.rightbox {
		position: absolute;
	    right: 12px;
		top: 50%;
		-webkit-transform: translateY(-50%);
		        transform: translateY(-50%);
		color: #000;
		h1 {
			font-size: 18px;
			font-weight: normal;
		}
		h3 {
			font-size: 16px;
			font-weight: normal;
		}
	}
}

.review {
	h1 {
		font-size: 16px;
		margin-bottom: 5px;
	}
	li {
		margin-left: 5%;
	    padding: 6px;
	}

	.review-list {
		margin-bottom: 10px;
		img {
			width: 50px;
			min-height: 50px;
			border-radius: 50%;
		}
		.data {
			position: relative;
			.people-name {
				position: absolute;
				font-size: 18px;
				left: 60px;
				top: 3px;
			}
			.star {
				position: absolute;
				font-size: 16px;
				left: 60px;
				bottom: 5px;
			}
			.date {
				position: absolute;
				right: 0;
				bottom: 5px;
			}
		}
		.review-content {
			margin-top: 5px;
			font-size: 16px;
		}
		
	}
}

.write-review {
	width: 100%;
	margin: 0 auto;
	.write-score {
		padding:6px 0;
		border-bottom: 2px solid #ddd;
		.text {
			font-size: 12px;
			display: block;
			text-align: center;
			color: #999;
		}
		.write-star {
			display: block;
			overflow: hidden;
			text-align: center;
			li {
				display: inline;
				list-style-type: none;
				font-size: 26px;
				margin: 0 7px;
			}

		}
	}
	#write-content {
		padding:10px;
		font-size: 18px;
		clear:both;
		display: block;
		width: 90%;
		overflow-y: auto;
		resize: none;
		margin-top: 15px;
		margin-bottom: 15px;
		border: none;
		outline: none;
	}
	.submit-review {
		float: right;
		padding: 5px 8px;
		background-color: #f2bb15;
		border-radius: 5px;
		color: #fff;
		box-shadow: 0 0 8px  #aaa;
		font-size: 14px;
	}
}